{
  "components": {
    "PrivateInternalApp": {
      "type": "JavaApplication",
      "relations": [
        {
          "hosted_on": "Java-SE-internal"
        }
      ],
      "properties": {
        "isPrivate": "yes"
      }
    },
    "Java-SE-internal": {
      "type": "JavaRuntime",
      "relations": [
        {
          "hosted_on": "InternalAppServer"
        }
      ],
      "properties": {
        "version": "16.0.2"
      }
    },
    "InternalAppServer": {
      "type": "UnixOS",
      "relations": [
        {
          "hosted_on": "PhysicalServer001"
        }
      ],
      "properties": {
        "distribution": "Ubuntu Server",
        "version": 18.04,
        "logRetentionPeriod": 50,
        "portForwarding": "enabled",
        "frozen": "yes"
      }
    },
    "PhysicalServer001": {
      "type": "compute",
      "properties": {
        "network": "DMZ-nw-01"
      }
    },
    "SupportService": {
      "type": "JavaApplication",
      "relations": [
        {
          "hosted_on": "Java-SE-support"
        },
        {
          "connects_to": "PrivateInternalApp"
        },
        {
          "connects_to": "UserDataTable"
        }
      ]
    },
    "Java-SE-support": {
      "type": "JavaRuntime",
      "relations": [
        {
          "hosted_on": "SupportServiceServer"
        }
      ],
      "properties": {
        "version": "16.0.2"
      }
    },
    "SupportServiceServer": {
      "type": "UnixOS",
      "relations": [
        {
          "hosted_on": "Instance1-JavaApp"
        }
      ],
      "properties": {
        "distribution": "Ubuntu Server",
        "version": 20.04,
        "logRetentionPeriod": 90,
        "portForwarding": "disabled",
        "frozen": "no"
      }
    },
    "Instance1-JavaApp": {
      "type": "AWSEC2",
      "properties": {
        "region": "us-east-2"
      }
    },
    "UserDataTable": {
      "type": "RelationalDB",
      "relations": [
        {
          "hosted_on": "AmazonRDS"
        }
      ]
    },
    "AmazonRDS": {
      "type": "StorageService",
      "properties": {
        "region": "us-west-2"
      }
    },
    "WebApp": {
      "type": "WebApplication",
      "relations": [
        {
          "hosted_on": "Apache2"
        },
        {
          "connects_to": "UserDataTable"
        }
      ]
    },
    "Apache2": {
      "type": "WebServer",
      "relations": [
        {
          "hosted_on": "WebAppServer"
        }
      ],
      "properties": {
        "servedPorts": 8080,
        "443Usage": "SSL",
        "AccessToRestricted": "everyone",
        "ServerRootOwner": "WebserverUser"
      }
    },
    "WebAppServer": {
      "type": "UnixOS",
      "relations": [
        {
          "hosted_on": "Instance2-WebApp"
        }
      ],
      "properties": {
        "distribution": "Ubuntu Server",
        "version": 16.04,
        "logRetentionPeriod": 90,
        "portForwarding": "disabled",
        "OpenPorts": "22, 8080"
      }
    },
    "Instance2-WebApp": {
      "type": "AWSEC2",
      "properties": {
        "region": "us-east-2"
      }
    }
  },
